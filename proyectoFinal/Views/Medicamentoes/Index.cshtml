@model IEnumerable<proyectoFinal.Models.Medicamento>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 ">
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <center><h2>Gestion de Propietarios de Medicamentos</h2></center>

            <p>
                @Html.ActionLink("Crear", "Create", null, new { @class = "btn btn-primary" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Medicamento1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fechaVencimiento)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Medicamento1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fechaVencimiento)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.idMed },new { @class = "btn btn-primary" }) 
                            @Html.ActionLink("Details", "Details", new { id = item.idMed }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.idMed }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
