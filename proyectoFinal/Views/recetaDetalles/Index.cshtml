@model IEnumerable<proyectoFinal.Models.recetaDetalle>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row ">
        <div class="col-xs-12 col-sm-12 col-md-12 ">
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <center> <h1>Gestión de Recetas</h1></center>

            @*<p>
                @Html.ActionLink("Crear", "Create", null, new { @class = "btn btn-primary" })
            </p>*@
            <table class="table table-responsive">
                <tr>
                    <th>
                     Diagnóstico
                    </th>
                    <th>
                       Medicamento
                    </th>
                    <th>
                     Dosis
                    </th>
                    <th>
                       Cantidad
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.consulta.diagnostico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Medicamento.Medicamento1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dosis)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cantidad)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.idreceta }, new { @class = "btn btn-primary" }) 
                            @Html.ActionLink("Detalles", "Details", new { id = item.idreceta }, new { @class = "btn btn-success" }) 
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.idreceta }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
            </div>
            </div>
            </div>
