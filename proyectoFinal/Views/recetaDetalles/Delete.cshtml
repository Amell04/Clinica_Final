@model proyectoFinal.Models.recetaDetalle

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="row ">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-offset-1">
            <br />
            <br />
            <br />
            <br />
            <h3 class="">¿Esta seguro de que desea eliminar este registro?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                      Diagnóstico :
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.consulta.diagnostico)
                    </dd>

                    <dt>
                      Medicamento :
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Medicamento.Medicamento1)
                    </dd>

                    <dt>
                      Dosis :
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.dosis)
                    </dd>

                    <dt>
                       Cantidad :
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.cantidad)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-primary" })
                </div>
                }
            </div>
        </div>
    </div>
</div>
